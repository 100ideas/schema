{
  "name": "@stencila/schema",
  "version": "0.7.0",
  "description": "Stencila schema and other specifications",
  "files": [
    "dist"
  ],
  "main": "dist/index.js",
  "types": "dist/types.d.ts",
  "scripts": {
    "lint": "prettier --write './**/*.{js,json,md,ts,yaml}' && eslint './**/*.{js,ts}' --fix",
    "build": "npm run build:schema && npm run build:ts && npm run build:py",
    "build:schema": "ts-node src/schema.ts",
    "build:jsonld": "gulp jsonld",
    "build:ts": "ts-node src/typescript.ts",
    "build:py": "ts-node src/python.ts",
    "build:r": "ts-node src/r.ts",
    "test": "jest",
    "docs": "npm run docs:readme && npm run docs:build",
    "docs:readme": "markdown-toc -i --maxdepth=4 README.md",
    "docs:build": "ts-node scripts/docs && scripts/docs.sh",
    "watch": "gulp watch",
    "clean": "gulp clean"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/stencila/schema.git"
  },
  "author": "Contributors https://github.com/stencila/schema/contributors",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/stencila/schema/issues"
  },
  "homepage": "https://stencila.github.io/schema",
  "devDependencies": {
    "@stencila/dev-config": "^1.1.2",
    "@stencila/encoda": "^0.59.1",
    "@types/fs-extra": "^8.0.0",
    "@types/jest": "^24.0.15",
    "@types/js-yaml": "^3.12.1",
    "@types/toposort": "^2.0.1",
    "ajv": "^6.10.2",
    "better-ajv-errors": "^0.6.4",
    "fs-extra": "^8.1.0",
    "globby": "^10.0.1",
    "gulp": "^4.0.2",
    "husky": "^3.0.1",
    "jest": "^24.8.0",
    "jest-file-snapshot": "^0.3.6",
    "js-yaml": "^3.13.1",
    "json-schema": "^0.2.3",
    "json-schema-to-typescript": "^6.1.3",
    "markdown-toc": "^1.2.0",
    "object.fromentries": "^2.0.0",
    "tempy": "^0.3.0",
    "through2": "^3.0.1",
    "toposort": "^2.0.2",
    "ts-jest": "^24.0.2",
    "ts-node": "^8.3.0",
    "typescript": "^3.5.3",
    "vscode-json-languageservice": "^3.2.0"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ],
    "rules": {
      "scope-case": [
        2,
        "always",
        "sentence-case"
      ],
      "subject-case": [
        2,
        "always",
        "sentence-case"
      ]
    }
  },
  "eslintConfig": {
    "extends": "@stencila/eslint-config"
  },
  "eslintIgnore": [
    "built",
    "dist",
    "tests"
  ],
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "setupFilesAfterEnv": [
      "<rootDir>/tests/matchers.ts"
    ],
    "watchPathIgnorePatterns": [
      "__file_snapshots__",
      "built",
      "dist"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "prettier": "@stencila/dev-config/prettier-config.json",
  "release": {
    "extends": "@stencila/semantic-release-config"
  },
  "dependencies": {}
}
