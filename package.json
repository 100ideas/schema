{
  "name": "@stencila/schema",
  "version": "0.19.0",
  "description": "Stencila schema and other specifications",
  "files": [
    "dist"
  ],
  "main": "dist/index.js",
  "types": "dist/types.d.ts",
  "scripts": {
    "format": "npx prettier --write './**/*.{js,json,md,ts,yaml}'",
    "lint": "npx eslint './**/*.{js,ts}' --fix --env node --env es6 --env jest",
    "test": "npm run build:jsonschema && jest",
    "build": "npm run build:jsonschema && npm run build:ts && npm run build:py && npm run build:r",
    "build:jsonschema": "ts-node ts/bindings/schema.ts",
    "build:jsonld": "ts-node ts/bindings/jsonld.ts",
    "build:ts": "ts-node ts/bindings/typescript.ts && tsc && cp built/*.schema.json dist",
    "build:py": "ts-node ts/bindings/python.ts",
    "build:r": "ts-node ts/bindings/r.ts",
    "docs": "npm run docs:readme && npm run docs:build",
    "docs:readme": "markdown-toc -i --maxdepth=4 README.md",
    "docs:build": "npm run build:ts && ts-node ts/docs",
    "docs:serve": "npx browser-sync ./built -f ./built --directory --no-ui --reload-debounce 750",
    "clean": "rimraf dist/* built/* ts/types.ts"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/stencila/schema.git"
  },
  "author": "Contributors https://github.com/stencila/schema/contributors",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/stencila/schema/issues"
  },
  "homepage": "https://stencila.github.io/schema",
  "devDependencies": {
    "@stencila/dev-config": "^1.1.3",
    "@stencila/encoda": "^0.60.4",
    "@stencila/logga": "^1.2.1",
    "@types/fs-extra": "^8.0.0",
    "@types/jest": "^24.0.15",
    "@types/js-yaml": "^3.12.1",
    "@types/lodash.clonedeep": "^4.5.6",
    "@types/toposort": "^2.0.1",
    "ajv": "^6.10.2",
    "better-ajv-errors": "^0.6.4",
    "browser-sync": "^2.26.7",
    "fs-extra": "^8.1.0",
    "globby": "^10.0.1",
    "husky": "^3.0.1",
    "jest": "^24.8.0",
    "jest-file-snapshot": "^0.3.6",
    "js-yaml": "^3.13.1",
    "json-schema": "^0.2.3",
    "json-schema-to-typescript": "^6.1.3",
    "lodash.clonedeep": "^4.5.0",
    "markdown-toc": "^1.2.0",
    "object.fromentries": "^2.0.0",
    "rimraf": "^2.6.3",
    "tempy": "^0.3.0",
    "toposort": "^2.0.2",
    "ts-jest": "^24.0.2",
    "ts-node": "^8.3.0",
    "typescript": "^3.5.3"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testMatch": [
      "<rootDir>/**/__tests__/**/*.[jt]s?(x)",
      "<rootDir>/**/*.test.[jt]s?(x)"
    ],
    "modulePathIgnorePatterns": [
      "<rootDir>/dist"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/tests/matchers.ts"
    ],
    "watchPathIgnorePatterns": [
      "__file_snapshots__",
      "built",
      "dist"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ],
    "rules": {
      "scope-case": [
        2,
        "always",
        "sentence-case"
      ],
      "subject-case": [
        2,
        "always",
        "sentence-case"
      ]
    }
  },
  "eslintConfig": {
    "extends": "@stencila/eslint-config",
    "env": {
      "node": true,
      "jest": true
    }
  },
  "eslintIgnore": [
    "built",
    "dist",
    "tests"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "prettier": "@stencila/dev-config/prettier-config.json",
  "release": {
    "extends": "@stencila/semantic-release-config"
  }
}
